---
import { cn } from '../utils/cn'
export interface Props {
	date: Date
	class?: string
}

const { date, class: className = '' } = Astro.props
---

<time class={cn('text-sm font-semibold text-opacity-60', className)} datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric'
		})
	}
</time>
